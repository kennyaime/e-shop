{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }} €</td>
                <td>{% if produit.disponible %}Oui{% else %}Non{% endif %}</td>
                <td>
                    <a href="{{ path('adminProduits_show', { 'id': produit.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adminProduits_new') }}">Créer un nouveau produit</a>

{% endblock %}
