{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Categories</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('adminCategories_index') }}">Retour</a><br />
    <a href="{{ path('adminCategories_edit', { 'id': category.id }) }}">Modifier</a>

    {{ form_start(delete_form) }}
        <input type="submit" value="Supprimer" class="btn btn-default">
    {{ form_end(delete_form) }}
{% endblock %}
