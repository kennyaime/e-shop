{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Utilisateur adresses</h1>

    {% for adresse in utilisateur.adresses %}
        <div class="col-md-12">
            <div class="col-md-4">
                <h4>Adresse {{ loop.index }} :</h4>
                {{ adresse.prenom }} {{ adresse.nom }}
                {{ adresse.adresse }}, {{ adresse.cp }}<br />
                {{ adresse.ville }} - {{ adresse.pays }}
                <br /><br />
            </div>
        </div>
    {% endfor %}
{% endblock %}